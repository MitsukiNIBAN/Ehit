<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="#9da9e0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/galleryDetailThumb"
        android:layout_width="128dp"
        android:layout_height="192dp"
        android:layout_margin="@dimen/dp_16"
        android:background="#f0a0df"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/galleryDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/galleryDetailThumb"
        app:layout_constraintTop_toTopOf="@id/galleryDetailThumb" />

    <TextView
        android:id="@+id/galleryDetailUploader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="@id/galleryDetailTitle"
        app:layout_constraintTop_toBottomOf="@id/galleryDetailTitle" />

    <com.mitsuki.ehit.mvvm.ui.widget.CategoryView
        android:id="@+id/galleryDetailCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lines="1"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="2dp"
        android:paddingEnd="@dimen/dp_8"
        android:paddingBottom="2dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/galleryDetailUploader"
        app:layout_constraintTop_toBottomOf="@id/galleryDetailUploader" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/galleryDetailDownload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_weight="1"
        android:background="@drawable/bg_fillet_grayscale_f5"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="Downlaod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/galleryDetailRead"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/galleryDetailThumb" />

    <TextView
        android:id="@+id/galleryDetailRead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_weight="1"
        android:background="@drawable/bg_fillet_grayscale_f5"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="Read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/galleryDetailDownload"
        app:layout_constraintTop_toTopOf="@id/galleryDetailDownload" />

    <View
        android:id="@+id/galleryDetailDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="#000"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/galleryDetailDownload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/galleryDetailDownload" />

</androidx.constraintlayout.widget.ConstraintLayout>