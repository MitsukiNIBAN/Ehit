<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_24"
    android:layout_marginEnd="@dimen/dp_24"
    android:layout_marginBottom="@dimen/dp_4"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/galleryDetailThumb"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="#B3D5FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/galleryDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/blue_202124"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/galleryDetailUploader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/blue_5F6368"
            android:textSize="@dimen/sp_16" />

        <com.mitsuki.ehit.mvvm.ui.widget.CategoryView
            android:id="@+id/galleryDetailCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:lines="1"
            android:paddingStart="@dimen/dp_8"
            android:paddingTop="2dp"
            android:paddingEnd="@dimen/dp_8"
            android:paddingBottom="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>